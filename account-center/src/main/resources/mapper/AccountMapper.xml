<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="li.jesse.accountcenter.dao.AccountDao">

    <resultMap id="BaseResultMap" type="li.jesse.accountcenter.pojo.Account">
        <id column="account_id" property="accountId" jdbcType="VARCHAR" />
        <result column="" property="" jdbcType="" />
        <result column="" property="" jdbcType="" />
        <result column="" property="" jdbcType="" />
        <result column="" property="" jdbcType="" />
        <result column="" property="" jdbcType="" />
        <result column="" property="" jdbcType="" />
    </resultMap>

    <sql id="Base_Column_List">
        account_id, password, given_name, middle_name, surname, international_telephone_code, primary_mobile, primary_email, primary_address, description, create_time, update_time
    </sql>

    <select id="selectByAccountId" resultMap="BaseResultMap" parameterType="java.lang.String">
        select
            <include refid="Base_Column_List" />
        from
            account
        where
            account_id = #{accountId, jdbcType=VARCHAR}
    </select>

</mapper>
