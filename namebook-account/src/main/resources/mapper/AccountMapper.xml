<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="li.jesse.namebookaccount.dao.AccountDao">

    <resultMap id="BaseResultMap"       type="li.jesse.namebookaccount.pojo.Account">
        <id column="account_id"         jdbcType="CHAR" />
        <result column="password"       jdbcType="VARCHAR" />
        <result column="given_name"     jdbcType="VARCHAR" />
        <result column="middle_name"    jdbcType="VARCHAR" />
        <result column="surname"        jdbcType="VARCHAR" />
        <result column="gender"         jdbcType="CHAR" />
        <result column="date_of_birth"  jdbcType="TIMESTAMP" />
        <result column="intl_tel_code"  jdbcType="CHAR" />
        <result column="primary_mobile" jdbcType="CHAR" />
        <result column="primary_email"  jdbcType="VARCHAR" />
        <result column="description"    jdbcType="VARCHAR" />
        <result column="create_time"    jdbcType="TIMESTAMP" />
        <result column="update_time"    jdbcType="TIMESTAMP" />
    </resultMap>

    <sql id="Base_Column_List">
        account_id, password, given_name, middle_name, surname, gender, date_of_birth, intl_tel_code, primary_mobile, primary_email, description, create_time, update_time
    </sql>

    <!-- ACUD -->
    <select id="selectByAccountId" resultMap="BaseResultMap" parameterType="java.lang.String">
        select
            <include refid="Base_Column_List" />
        from
            account
        where
            account_id = #{accountId, jdbcType=CHAR}
    </select>

</mapper>
