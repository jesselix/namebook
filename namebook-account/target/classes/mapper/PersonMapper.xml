<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="li.jesse.namebookaccount.dao.PersonDao">

    <resultMap  id="BaseResultMap"          type="li.jesse.namebookaccount.pojo.Person">
        <id     column="person_id"          property="personId"             jdbcType="BIGINT" />
        <result column="password"           property="password"             jdbcType="VARCHAR" />
        <result column="gender_code"        property="genderCode"           jdbcType="VARCHAR" />
        <result column="date_of_birth"      property="dateOfBirth"          jdbcType="DATE" />
        <result column="intl_tel_code"      property="intlTelCode"          jdbcType="VARCHAR" />
        <result column="login_mobile"       property="loginMobile"          jdbcType="VARCHAR" />
        <result column="login_email"        property="loginEmail"           jdbcType="VARCHAR" />
        <result column="create_time"        property="createTime"           jdbcType="TIMESTAMP" />
        <result column="update_time"        property="updateTime"           jdbcType="TIMESTAMP" />
    </resultMap>

    <sql id="Base_Column_List">
        person_id,
        password,
        gender_code,
        date_of_birth,
        intl_tel_code,
        login_mobile,
        login_email,
        create_time,
        update_time
    </sql>

    <!-- CRUD -->
    <!-- select -->
    <select id="selectByPersonId" resultMap="BaseResultMap" parameterType="java.lang.Long">
        select
            <include refid="Base_Column_List" />
        from
            account.person
        where
            person_id = #{personId, jdbcType=BIGINT}
    </select>

